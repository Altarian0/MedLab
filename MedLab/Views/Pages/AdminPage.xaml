<Page x:Class="MedLab.Views.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MedLab.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="NoteList" IsReadOnly="True" Grid.Row="1" Background="White" AutoGenerateColumns="False" Margin="10,10,10,10" >
            <DataGrid.ContextMenu>
                <ContextMenu Background="White">
                    <MenuItem x:Name="EditItem" Header="Изменить" Background="White" Click="EditItem_Click"/>
                    <MenuItem x:Name="DeleteItem" Header="Удалить" Click="DeleteItem_Click"/>
                    <MenuItem x:Name="NoteButton" Header="Информация о пациенте" Background="White" Click="NoteButton_Click"/>

                </ContextMenu>
            </DataGrid.ContextMenu>
            <DataGrid.Columns>
                <DataGridTextColumn Width="*" Header="Имя пациента" Binding="{Binding Patient.FullName}"/>
                <DataGridTextColumn Width="*" Header="Дата подачи заявки" Binding="{Binding CreateDate, StringFormat=dd.MM.yyyy}"/>
                <DataGridTextColumn Width="*" Header="Статус" Binding="{Binding Status.Name}"/>
                <DataGridTextColumn Width="*" Header="Закрепленный лаборант" Binding="{Binding User.FullName}"/>
            </DataGrid.Columns>
        </DataGrid>
        <GroupBox Header="Сортировка:" FontSize="18" BorderBrush="Black"   Height="80" Margin="15,10,160,0" VerticalAlignment="Top">
            <StackPanel Margin="10,0,10,0" VerticalAlignment="Center" Orientation="Horizontal">
                <CheckBox x:Name="NameSortCheck" VerticalContentAlignment="Center" FontSize="12" Content="По имени" Margin="10,0,0,0"/>
                <CheckBox x:Name="TimeSortCheck" VerticalContentAlignment="Center" FontSize="12" Content="Времени" Margin="10,0,0,0"/>
                <ComboBox x:Name="LaborantCombo" DisplayMemberPath="FullName" Height="30" Width="178" VerticalContentAlignment="Center" FontSize="12" Margin="10,0,0,0"/>
                <ComboBox x:Name="StatusCombo" DisplayMemberPath="Name" Height="30" Width="95" VerticalContentAlignment="Center" FontSize="12" Margin="10,0,0,0"/>
                <Button x:Name="SortButton" Content="Сортировать" FontSize="12" Width="100" Margin="20,0,0,0" Height="35" HorizontalAlignment="Right" Click="SortButton_Click"/>
            </StackPanel>
        </GroupBox>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Right">
            <Button x:Name="AssistButton" Content="Режим лаборанта" FontSize="12" Width="136" Margin="0,10,10,0" Height="30"  Click="AssistButton_Click" />
            <Button x:Name="ResultButton" Content="Режим отчетов" FontSize="12" Width="136" Margin="0,10,10,0" Height="30" VerticalAlignment="Center" HorizontalAlignment="Right" Click="ResultButton_Click" />
        </StackPanel>
    </Grid>
</Page>
